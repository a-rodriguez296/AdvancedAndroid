<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_notebook">

    <ImageView
        android:src="@drawable/notebook"
        android:layout_width="@dimen/grid_view_icon_width"
        android:layout_height="@dimen/grid_view_icon_width"
        android:id="@+id/icon_notebook"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>

    <!--Con tools se hace para que se muestre solo en diseÃ±o pero no en ejecucion-->

    <TextView
        android:id="@+id/text_notebook_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_text"
        android:layout_below="@+id/icon_notebook"
        android:layout_alignLeft="@+id/icon_notebook"
        android:layout_alignStart="@+id/icon_notebook"
        style="@style/notebook_text_style" />

</RelativeLayout>